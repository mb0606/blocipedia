.container
  %div{class:"eight columns"}
    .row
      %h1= markdown @article.title
      %p=  markdown @article.body
      
    %small
      = link_to "New Article", new_wiki_article_path(@wiki), class: 'button'
      = link_to "Edit", edit_wiki_article_path(@wiki,@article), class: 'button'
    = link_to "Delete Article", [@wiki,@article], method: :delete, class: 'button', confirm: 'Are you sure you want to delete this?'