<!DOCTYPE html>


<html>
<head>

  <title>Blocipedia</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <h2><strong>BLOCEPDI</strong></h2>
<div class="container">
  <div class='eight colums'>
    <div class='row'>
      <ul class='nav'>

        <div>
          <li ><%= link_to "Blocepdia", root_path%></li>
          <li ><%= link_to "Wiki", wikis_path%></li>
        </div>

        <div class= "offset-by-ten">
          <%if current_user %>
            Hello <%= current_user.email %>! <%= link_to "Sign Out", destroy_user_session_path, method: :delete%>
          <%else%>
            <%= link_to "Sign In", new_user_session_path %> or 
            <%= link_to "Sign Up", new_user_registration_path %>
          <%end%>

        </div>        
      </ul>
    </div>

<%= yield %>

</div>
</div>
</body>
</html>

